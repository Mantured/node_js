extends layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very figo about some qualcosa
                        .card__actions
                            button.btn Add al Carro
        else
            h1 No Vendo Prodoti
        



